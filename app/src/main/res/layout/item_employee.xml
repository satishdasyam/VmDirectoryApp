<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_emp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/small_space"
        android:contentDescription="@string/ab_employee_picture"
        android:src="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/tv_emp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_emp"
        android:focusable="false"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="@dimen/small_space"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_emp_name"
        android:focusable="false"
        android:gravity="center"
        android:paddingStart="@dimen/small_space"
        android:paddingEnd="@dimen/small_space"
        tools:text="Job" />

</RelativeLayout>